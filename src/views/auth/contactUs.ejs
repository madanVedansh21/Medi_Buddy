<%- include('../partials/header') %>

<main
  class="flex-grow-1"
  style="
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
    min-height: calc(100vh - 100px);
  "
>
  <!-- Hero Section -->
  <section
    class="py-5"
    style="
      background: linear-gradient(
        135deg,
        rgba(59, 130, 246, 0.1) 0%,
        rgba(30, 41, 59, 0.8) 100%
      );
    "
  >
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="col-lg-8">
          <div class="mb-4">
            <i
              class="fas fa-envelope"
              style="font-size: 4rem; color: #3b82f6; margin-bottom: 1rem"
            ></i>
          </div>
          <h1 class="display-4 fw-bold mb-3" style="color: #ffffff">
            Get in Touch
          </h1>
          <p class="lead" style="color: #94a3b8">
            Have questions about MediBuddy? We're here to help you manage your
            healthcare journey better.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form & Info Section -->
  <section class="py-5">
    <div class="container">
      <div class="row g-5">
        <!-- Contact Form -->
        <div class="col-lg-8">
          <div
            class="card border-0 shadow-lg h-100"
            style="
              background: rgba(30, 41, 59, 0.95);
              backdrop-filter: blur(10px);
              border: 1px solid rgba(59, 130, 246, 0.3) !important;
            "
          >
            <div class="card-body p-5">
              <h3 class="mb-4" style="color: #ffffff; font-weight: 600">
                Send us a Message
              </h3>

              <form
                action="/contact"
                method="POST"
                class="needs-validation"
                novalidate
              >
                <div class="row">
                  <!-- Full Name -->
                  <div class="col-md-6 mb-4">
                    <label
                      for="fullName"
                      class="form-label"
                      style="color: #e2e8f0; font-weight: 500"
                      >Full Name</label
                    >
                    <div class="input-group">
                      <span
                        class="input-group-text border-0"
                        style="
                          background: rgba(59, 130, 246, 0.1);
                          color: #3b82f6;
                        "
                      >
                        <i class="fas fa-user"></i>
                      </span>
                      <input
                        type="text"
                        class="form-control border-0"
                        id="fullName"
                        name="fullName"
                        placeholder="Enter your full name"
                        required
                        style="
                          background: rgba(15, 23, 42, 0.8);
                          color: #ffffff;
                          border: 1px solid rgba(59, 130, 246, 0.3) !important;
                        "
                      />
                    </div>
                  </div>

                  <!-- Email -->
                  <div class="col-md-6 mb-4">
                    <label
                      for="email"
                      class="form-label"
                      style="color: #e2e8f0; font-weight: 500"
                      >Email Address</label
                    >
                    <div class="input-group">
                      <span
                        class="input-group-text border-0"
                        style="
                          background: rgba(59, 130, 246, 0.1);
                          color: #3b82f6;
                        "
                      >
                        <i class="fas fa-envelope"></i>
                      </span>
                      <input
                        type="email"
                        class="form-control border-0"
                        id="email"
                        name="email"
                        placeholder="Enter your email"
                        required
                        style="
                          background: rgba(15, 23, 42, 0.8);
                          color: #ffffff;
                          border: 1px solid rgba(59, 130, 246, 0.3) !important;
                        "
                      />
                    </div>
                  </div>
                </div>

                <!-- Phone -->
                <div class="mb-4">
                  <label
                    for="phone"
                    class="form-label"
                    style="color: #e2e8f0; font-weight: 500"
                    >Phone Number (Optional)</label
                  >
                  <div class="input-group">
                    <span
                      class="input-group-text border-0"
                      style="
                        background: rgba(59, 130, 246, 0.1);
                        color: #3b82f6;
                      "
                    >
                      <i class="fas fa-phone"></i>
                    </span>
                    <input
                      type="tel"
                      class="form-control border-0"
                      id="phone"
                      name="phone"
                      placeholder="Enter your phone number"
                      style="
                        background: rgba(15, 23, 42, 0.8);
                        color: #ffffff;
                        border: 1px solid rgba(59, 130, 246, 0.3) !important;
                      "
                    />
                  </div>
                </div>

                <!-- Subject -->
                <div class="mb-4">
                  <label
                    for="subject"
                    class="form-label"
                    style="color: #e2e8f0; font-weight: 500"
                    >Subject</label
                  >
                  <div class="input-group">
                    <span
                      class="input-group-text border-0"
                      style="
                        background: rgba(59, 130, 246, 0.1);
                        color: #3b82f6;
                      "
                    >
                      <i class="fas fa-tag"></i>
                    </span>
                    <select
                      class="form-select border-0"
                      id="subject"
                      name="subject"
                      required
                      style="
                        background: rgba(15, 23, 42, 0.8);
                        color: #ffffff;
                        border: 1px solid rgba(59, 130, 246, 0.3) !important;
                      "
                    >
                      <option value="">Select a subject</option>
                      <option value="general">General Inquiry</option>
                      <option value="support">Technical Support</option>
                      <option value="feature">Feature Request</option>
                      <option value="bug">Bug Report</option>
                    </select>
                  </div>
                </div>

                <!-- Message -->
                <div class="mb-4">
                  <label
                    for="message"
                    class="form-label"
                    style="color: #e2e8f0; font-weight: 500"
                    >Message</label
                  >
                  <textarea
                    class="form-control border-0"
                    id="message"
                    name="message"
                    rows="6"
                    placeholder="Tell us how we can help you..."
                    required
                    style="
                      background: rgba(15, 23, 42, 0.8);
                      color: #ffffff;
                      border: 1px solid rgba(59, 130, 246, 0.3) !important;
                      resize: vertical;
                    "
                  ></textarea>
                </div>

                <!-- Submit Button -->
                <button
                  type="submit"
                  class="btn w-100 py-3"
                  style="
                    background: linear-gradient(
                      135deg,
                      #3b82f6 0%,
                      #1d4ed8 100%
                    );
                    border: none;
                    color: white;
                    font-weight: 600;
                    border-radius: 8px;
                    transition: all 0.3s ease;
                  "
                  onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 10px 25px rgba(59, 130, 246, 0.4)'"
                  onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none'"
                >
                  <i class="fas fa-paper-plane me-2"></i>
                  Send Message
                </button>
              </form>
            </div>
          </div>
        </div>

        <!-- Contact Information -->
        <div class="col-lg-4">
          <div
            class="card border-0 shadow-lg h-100"
            style="
              background: rgba(30, 41, 59, 0.95);
              backdrop-filter: blur(10px);
              border: 1px solid rgba(59, 130, 246, 0.3) !important;
            "
          >
            <div class="card-body p-5">
              <h3 class="mb-4" style="color: #ffffff; font-weight: 600">
                Contact Information
              </h3>

  <!-- FAQ Section -->
  <section class="py-5" style="background: rgba(15, 23, 42, 0.5)">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="text-center mb-5">
            <h2 class="mb-3" style="color: #ffffff; font-weight: 600">
              Frequently Asked Questions
            </h2>
            <p style="color: #94a3b8">
              Quick answers to common questions about MediBuddy
            </p>
          </div>

          <div class="accordion" id="faqAccordion">
            <!-- FAQ Item 1 -->
            <div
              class="accordion-item mb-3"
              style="
                background: rgba(30, 41, 59, 0.8);
                border: 1px solid rgba(59, 130, 246, 0.3);
                border-radius: 8px;
              "
            >
              <h2 class="accordion-header">
                <button
                  class="accordion-button collapsed"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#faq1"
                  style="
                    background: transparent;
                    color: #e2e8f0;
                    border: none;
                    font-weight: 500;
                  "
                >
                  How do I get started with MediBuddy?
                </button>
              </h2>
              <div
                id="faq1"
                class="accordion-collapse collapse"
                data-bs-parent="#faqAccordion"
              >
                <div class="accordion-body" style="color: #94a3b8">
                  Simply create an account, complete your health profile, and
                  start tracking your medications, appointments, and health
                  data. Our intuitive interface makes it easy to get started in
                  minutes.
                </div>
              </div>
            </div>

            <!-- FAQ Item 3 -->
            <div
              class="accordion-item mb-3"
              style="
                background: rgba(30, 41, 59, 0.8);
                border: 1px solid rgba(59, 130, 246, 0.3);
                border-radius: 8px;
              "
            >
              <h2 class="accordion-header">
                <button
                  class="accordion-button collapsed"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#faq3"
                  style="
                    background: transparent;
                    color: #e2e8f0;
                    border: none;
                    font-weight: 500;
                  "
                >
                    Can I access MediBuddy on mobile?
                </button>
              </h2>
              <div
                id="faq3"
                class="accordion-collapse collapse"
                data-bs-parent="#faqAccordion"
              >
                <div class="accordion-body" style="color: #94a3b8">
                    No need to worry! MediBuddy is fully responsive and works seamlessly 
                    on both desktop and mobile devices. You can access your health data anytime, anywhere.
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<style>
  /* Form styling */
  .form-control:focus,
  .form-select:focus {
    background: rgba(15, 23, 42, 0.9) !important;
    border-color: #3b82f6 !important;
    box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.25) !important;
    color: #ffffff !important;
  }

  .form-control::placeholder {
    color: #64748b !important;
  }

  .form-select option {
    background: #1e293b !important;
    color: #ffffff !important;
  }

  .form-check-input:checked {
    background-color: #3b82f6 !important;
    border-color: #3b82f6 !important;
  }

  .form-check-input:focus {
    border-color: #3b82f6 !important;
    box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.25) !important;
  }

  /* Input group styling */
  .input-group-text {
    border-right: none !important;
  }

  .input-group .form-control,
  .input-group .form-select {
    border-left: none !important;
  }

  .input-group .form-control:focus,
  .input-group .form-select:focus {
    border-left: none !important;
  }

  /* Card hover effects */
  .card {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3) !important;
  }

  /* Accordion styling */
  .accordion-button:not(.collapsed) {
    background: rgba(59, 130, 246, 0.1) !important;
    color: #3b82f6 !important;
  }

  .accordion-button:focus {
    box-shadow: none !important;
    border-color: rgba(59, 130, 246, 0.3) !important;
  }

  .accordion-button::after {
    filter: brightness(0) saturate(100%) invert(64%) sepia(25%) saturate(1217%)
      hue-rotate(201deg) brightness(95%) contrast(91%);
  }

  .accordion-button:not(.collapsed)::after {
    filter: brightness(0) saturate(100%) invert(42%) sepia(93%) saturate(1352%)
      hue-rotate(204deg) brightness(102%) contrast(97%);
  }

  /* Social button hover effects */
  .btn:not([type="submit"]):hover {
    background: rgba(59, 130, 246, 0.2) !important;
    border-color: rgba(59, 130, 246, 0.5) !important;
    color: #3b82f6 !important;
    transform: translateY(-2px);
  }
</style>
