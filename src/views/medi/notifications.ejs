<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MediBuddy - Care Team Notifications</title>
    <!-- Bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- FontAwesome CDN -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>
  <body
    style="
      background: linear-gradient(
        135deg,
        #0f172a 0%,
        #1e293b 50%,
        #334155 100%
      );
      min-height: 100vh;
    "
  >
    <%- include('../partials/dashboard-header') %>

    <main class="container py-5">
      <div class="row mb-4">
        <div class="col-12">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
              <h1
                style="
                  color: #f8fafc;
                  font-weight: 700;
                  font-size: 2.5rem;
                  margin: 0;
                "
              >
                <i class="fas fa-user-shield me-3" style="color: #f59e0b"></i>
                Care Team Notifications
              </h1>
              <p style="color: #94a3b8; font-size: 1.1rem; margin: 0">
                Set up alerts for family members and caregivers
              </p>
            </div>
            <a
              href="/dashboard"
              class="btn"
              style="
                background: linear-gradient(135deg, #64748b 0%, #475569 100%);
                border: none;
                color: white;
                padding: 10px 20px;
                border-radius: 8px;
                text-decoration: none;
              "
            >
              <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>
          </div>
        </div>
      </div>

      <!-- Current User Profile -->
      <div class="row mb-4">
        <div class="col-12">
          <div
            class="card"
            style="
              background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
              border: 1px solid rgba(245, 158, 11, 0.3);
              border-radius: 15px;
            "
          >
            <div
              class="card-header"
              style="
                background: rgba(245, 158, 11, 0.1);
                border-bottom: 1px solid rgba(245, 158, 11, 0.3);
              "
            >
              <h3 style="color: #f8fafc; margin: 0; font-weight: 600">
                <i class="fas fa-user me-2"></i>
                Your Profile
              </h3>
            </div>
            <div class="card-body p-4">
              <div class="row align-items-center">
                <div class="col-md-8">
                  <div class="d-flex align-items-center">
                    <div class="me-3">
                      <i
                        class="fas fa-user-circle"
                        style="font-size: 3rem; color: #f59e0b"
                      ></i>
                    </div>
                    <div>
                      <h5 style="color: #f8fafc; margin: 0; font-weight: 600">
                        <%= user.fullName %>
                      </h5>
                      <p style="color: #94a3b8; margin: 0"><%= user.email %></p>
                      <small style="color: #64748b">
                        <i class="fas fa-calendar me-1"></i>
                        Member since <%= new
                        Date(user.createdAt).toLocaleDateString('en-US', {
                        month: 'long', year: 'numeric' }) %>
                      </small>
                    </div>
                  </div>
                </div>
                <div class="col-md-4 text-end">
                  <div class="d-flex flex-column align-items-end"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Add New Care Team Member -->
      <div class="row mb-4">
        <div class="col-12">
          <div
            class="card"
            style="
              background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
              border: 1px solid rgba(245, 158, 11, 0.3);
              border-radius: 15px;
            "
          >
            <div
              class="card-header"
              style="
                background: rgba(245, 158, 11, 0.1);
                border-bottom: 1px solid rgba(245, 158, 11, 0.3);
              "
            >
              <h3 style="color: #f8fafc; margin: 0; font-weight: 600">
                <i class="fas fa-user-plus me-2"></i>
                Add Care Team Member
              </h3>
            </div>
            <div class="card-body p-4">
              <form action="/care-team" method="POST" id="careTeamForm">
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label
                      for="caregiverName"
                      class="form-label"
                      style="color: #f8fafc; font-weight: 600"
                    >
                      Full Name:
                    </label>
                    <input
                      type="text"
                      class="form-control"
                      id="caregiverName"
                      name="caregiverName"
                      placeholder="Enter caregiver's full name"
                      style="
                        background: rgba(15, 23, 42, 0.5);
                        border: 1px solid rgba(245, 158, 11, 0.3);
                        color: #f8fafc;
                        border-radius: 8px;
                      "
                      required
                    />
                  </div>
                  <div class="col-md-6 mb-3">
                    <label
                      for="caregiverEmail"
                      class="form-label"
                      style="color: #f8fafc; font-weight: 600"
                    >
                      Email Address:
                    </label>
                    <input
                      type="email"
                      class="form-control"
                      id="caregiverEmail"
                      name="caregiverEmail"
                      placeholder="Enter email address"
                      style="
                        background: rgba(15, 23, 42, 0.5);
                        border: 1px solid rgba(245, 158, 11, 0.3);
                        color: #f8fafc;
                        border-radius: 8px;
                      "
                      required
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-6 mb-3">
                    <label
                      for="relationship"
                      class="form-label"
                      style="color: #f8fafc; font-weight: 600"
                    >
                      Relationship:
                    </label>
                    <select
                      class="form-select"
                      id="relationship"
                      name="relationship"
                      style="
                        background: rgba(15, 23, 42, 0.5);
                        border: 1px solid rgba(245, 158, 11, 0.3);
                        color: #f8fafc;
                        border-radius: 8px;
                      "
                    >
                      <option value="family">Family Member</option>
                      <option value="caregiver">Professional Caregiver</option>
                      <option value="friend">Friend</option>
                      <option value="doctor">Doctor</option>
                      <option value="other">Other</option>
                    </select>
                  </div>
                  <div class="col-md-6 mb-3">
                    <label
                      for="notificationDelay"
                      class="form-label"
                      style="color: #f8fafc; font-weight: 600"
                    >
                      Alert Delay (minutes):
                    </label>
                    <select
                      class="form-select"
                      id="notificationDelay"
                      name="notificationDelay"
                      style="
                        background: rgba(15, 23, 42, 0.5);
                        border: 1px solid rgba(245, 158, 11, 0.3);
                        color: #f8fafc;
                        border-radius: 8px;
                      "
                    >
                      <option value="30">30 minutes</option>
                      <option value="60" selected>1 hour</option>
                      <option value="120">2 hours</option>
                      <option value="240">4 hours</option>
                    </select>
                  </div>
                </div>
                <div class="mb-3">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      id="enableNotifications"
                      name="enableNotifications"
                      checked
                    />
                    <label
                      class="form-check-label"
                      for="enableNotifications"
                      style="color: #94a3b8"
                    >
                      Enable immediate notifications for missed medications
                    </label>
                  </div>
                </div>
                <button
                  type="submit"
                  class="btn w-100"
                  style="
                    background: linear-gradient(
                      135deg,
                      #f59e0b 0%,
                      #d97706 100%
                    );
                    border: none;
                    color: white;
                    padding: 12px 24px;
                    border-radius: 8px;
                    font-weight: 600;
                  "
                >
                  <i class="fas fa-user-plus me-2"></i>
                  Add Care Team Member
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>

      <!-- Notification Settings Info -->
      <div class="row">
        <div class="col-12">
          <div
            class="card"
            style="
              background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
              border: 1px solid rgba(245, 158, 11, 0.3);
              border-radius: 15px;
            "
          >
            <div
              class="card-header"
              style="
                background: rgba(245, 158, 11, 0.1);
                border-bottom: 1px solid rgba(245, 158, 11, 0.3);
              "
            >
              <h3 style="color: #f8fafc; margin: 0; font-weight: 600">
                <i class="fas fa-info-circle me-2"></i>
                How Notifications Work
              </h3>
            </div>
            <div class="card-body p-4">
              <div class="row">
                <div class="col-md-4 mb-3">
                  <div class="text-center p-3">
                    <i
                      class="fas fa-clock mb-3"
                      style="font-size: 2.5rem; color: #3b82f6"
                    ></i>
                    <h5 style="color: #f8fafc; margin-bottom: 10px">
                      Automatic Monitoring
                    </h5>
                    <p style="color: #94a3b8; font-size: 0.9rem; margin: 0">
                      We automatically track your medication schedule and detect
                      missed doses
                    </p>
                  </div>
                </div>
                <div class="col-md-4 mb-3">
                  <div class="text-center p-3">
                    <i
                      class="fas fa-envelope mb-3"
                      style="font-size: 2.5rem; color: #f59e0b"
                    ></i>
                    <h5 style="color: #f8fafc; margin-bottom: 10px">
                      Email Alerts
                    </h5>
                    <p style="color: #94a3b8; font-size: 0.9rem; margin: 0">
                      Care team members receive email notifications when you
                      miss medications
                    </p>
                  </div>
                </div>
                <div class="col-md-4 mb-3">
                  <div class="text-center p-3">
                    <i
                      class="fas fa-shield-alt mb-3"
                      style="font-size: 2.5rem; color: #10b981"
                    ></i>
                    <h5 style="color: #f8fafc; margin-bottom: 10px">
                      Privacy Protected
                    </h5>
                    <p style="color: #94a3b8; font-size: 0.9rem; margin: 0">
                      Only essential medication compliance information is shared
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script>
      // Function to show notifications
      function showNotification(message, type) {
        const notification = document.createElement("div");
        notification.className = `alert position-fixed`;
        notification.style.cssText = `
          top: 20px; right: 20px; z-index: 1050; 
          background: ${
            type === "success"
              ? "#10b981"
              : type === "info"
              ? "#3b82f6"
              : "#f59e0b"
          }; 
          color: white; border: none; border-radius: 8px;
          box-shadow: 0 10px 25px rgba(0,0,0,0.3);
          padding: 15px 20px; min-width: 300px;
        `;
        notification.textContent = message;

        document.body.appendChild(notification);

        setTimeout(() => {
          notification.remove();
        }, 3000);
      }
    </script>

    <% if (typeof success !== 'undefined' && success) { %>
    <script>
      showNotification("âœ… Care team member added successfully!", "success");
    </script>
    <% } %>

    <!-- Bootstrap JS Bundle CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
