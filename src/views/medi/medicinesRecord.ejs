<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MediBuddy - Medicine Tracker</title>
    <!-- Bootstrap CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- FontAwesome CDN -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
  </head>
  <body
    style="
      background: linear-gradient(
        135deg,
        #0f172a 0%,
        #1e293b 50%,
        #334155 100%
      );
      min-height: 100vh;
    "
  >
    <%- include('../partials/dashboard-header') %>
    <main class="container py-5">
      <div class="row mb-4">
        <div class="col-12">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
              <h1
                style="
                  color: #f8fafc;
                  font-weight: 700;
                  font-size: 2.5rem;
                  margin: 0;
                "
              >
                <i class="fas fa-pills me-3" style="color: #3b82f6"></i>
                Medicine Tracker
              </h1>
              <p style="color: #94a3b8; font-size: 1.1rem; margin: 0">
                Track your daily medications and never miss a dose
              </p>
            </div>
            <a
              href="/dashboard"
              class="btn"
              style="
                background: linear-gradient(135deg, #64748b 0%, #475569 100%);
                border: none;
                color: white;
                padding: 10px 20px;
                border-radius: 8px;
                text-decoration: none;
              "
            >
              <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
            </a>
          </div>
        </div>
      </div>

      <!-- Today's Date -->
      <div class="row mb-4">
        <div class="col-12">
          <div
            class="card"
            style="
              background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
              border: 1px solid rgba(59, 130, 246, 0.3);
              border-radius: 15px;
            "
          >
            <div class="card-body text-center p-3">
              <h4 style="color: #f8fafc; margin: 0">
                <i class="fas fa-calendar-day me-2" style="color: #3b82f6"></i>
                Today: <span id="currentDate"></span>
              </h4>
            </div>
          </div>
        </div>
      </div>

      <!-- Medicine List -->
      <div class="row">
        <div class="col-12">
          <div
            class="card"
            style="
              background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
              border: 1px solid rgba(59, 130, 246, 0.3);
              border-radius: 15px;
            "
          >
            <div
              class="card-header"
              style="
                background: rgba(59, 130, 246, 0.1);
                border-bottom: 1px solid rgba(59, 130, 246, 0.3);
              "
            >
              <h3 style="color: #f8fafc; margin: 0; font-weight: 600">
                <i class="fas fa-list-check me-2"></i>
                Your Medicines
              </h3>
            </div>
            <div class="card-body p-0">
              <!-- Medicine Item 1 -->
              <div
                class="medicine-item p-4 border-bottom"
                style="border-color: rgba(59, 130, 246, 0.2)"
              >
                <div class="row align-items-center">
                  <div class="col-md-6">
                    <div class="d-flex align-items-center">
                      <div class="medicine-icon me-3">
                        <i
                          class="fas fa-capsules"
                          style="font-size: 1.5rem; color: #3b82f6"
                        ></i>
                      </div>
                      <div>
                        <h5 style="color: #f8fafc; margin: 0; font-weight: 600">
                          Paracetamol 500mg
                        </h5>
                        <small style="color: #94a3b8"
                          >Take after meals - 3 times daily</small
                        >
                      </div>
                    </div>
                  </div>
                  <div class="col-md-3 text-center">
                    <div
                      class="form-check form-switch d-flex justify-content-center"
                    >
                      <input
                        class="form-check-input medicine-checkbox"
                        type="checkbox"
                        id="med1"
                        style="transform: scale(1.5)"
                        onchange="markMedicine(this, 'Paracetamol 500mg')"
                      />
                      <label
                        class="form-check-label ms-2"
                        for="med1"
                        style="color: #94a3b8"
                      >
                        Taken Today
                      </label>
                    </div>
                  </div>
                  <div class="col-md-3 text-end">
                    <div
                      id="timestamp1"
                      class="timestamp"
                      style="color: #64748b; font-size: 0.9rem"
                    >
                      Not taken yet
                    </div>
                  </div>
                </div>
              </div>

              <!-- Medicine Item 2 -->
              <div
                class="medicine-item p-4 border-bottom"
                style="border-color: rgba(59, 130, 246, 0.2)"
              >
                <div class="row align-items-center">
                  <div class="col-md-6">
                    <div class="d-flex align-items-center">
                      <div class="medicine-icon me-3">
                        <i
                          class="fas fa-tablets"
                          style="font-size: 1.5rem; color: #10b981"
                        ></i>
                      </div>
                      <div>
                        <h5 style="color: #f8fafc; margin: 0; font-weight: 600">
                          Vitamin D3 1000IU
                        </h5>
                        <small style="color: #94a3b8"
                          >Take with breakfast - Once daily</small
                        >
                      </div>
                    </div>
                  </div>
                  <div class="col-md-3 text-center">
                    <div
                      class="form-check form-switch d-flex justify-content-center"
                    >
                      <input
                        class="form-check-input medicine-checkbox"
                        type="checkbox"
                        id="med2"
                        style="transform: scale(1.5)"
                        onchange="markMedicine(this, 'Vitamin D3 1000IU')"
                        checked
                      />
                      <label
                        class="form-check-label ms-2"
                        for="med2"
                        style="color: #94a3b8"
                      >
                        Taken Today
                      </label>
                    </div>
                  </div>
                  <div class="col-md-3 text-end">
                    <div
                      id="timestamp2"
                      class="timestamp"
                      style="color: #10b981; font-size: 0.9rem"
                    >
                      Taken at 8:30 AM
                    </div>
                  </div>
                </div>
              </div>

              <!-- Medicine Item 3 -->
              <div
                class="medicine-item p-4 border-bottom"
                style="border-color: rgba(59, 130, 246, 0.2)"
              >
                <div class="row align-items-center">
                  <div class="col-md-6">
                    <div class="d-flex align-items-center">
                      <div class="medicine-icon me-3">
                        <i
                          class="fas fa-pills"
                          style="font-size: 1.5rem; color: #f59e0b"
                        ></i>
                      </div>
                      <div>
                        <h5 style="color: #f8fafc; margin: 0; font-weight: 600">
                          Omega-3 Fish Oil
                        </h5>
                        <small style="color: #94a3b8"
                          >Take with dinner - Once daily</small
                        >
                      </div>
                    </div>
                  </div>
                  <div class="col-md-3 text-center">
                    <div
                      class="form-check form-switch d-flex justify-content-center"
                    >
                      <input
                        class="form-check-input medicine-checkbox"
                        type="checkbox"
                        id="med3"
                        style="transform: scale(1.5)"
                        onchange="markMedicine(this, 'Omega-3 Fish Oil')"
                      />
                      <label
                        class="form-check-label ms-2"
                        for="med3"
                        style="color: #94a3b8"
                      >
                        Taken Today
                      </label>
                    </div>
                  </div>
                  <div class="col-md-3 text-end">
                    <div
                      id="timestamp3"
                      class="timestamp"
                      style="color: #64748b; font-size: 0.9rem"
                    >
                      Not taken yet
                    </div>
                  </div>
                </div>
              </div>

              <!-- Medicine Item 4 -->
              <div class="medicine-item p-4">
                <div class="row align-items-center">
                  <div class="col-md-6">
                    <div class="d-flex align-items-center">
                      <div class="medicine-icon me-3">
                        <i
                          class="fas fa-capsules"
                          style="font-size: 1.5rem; color: #ef4444"
                        ></i>
                      </div>
                      <div>
                        <h5 style="color: #f8fafc; margin: 0; font-weight: 600">
                          Multivitamin
                        </h5>
                        <small style="color: #94a3b8"
                          >Take with breakfast - Once daily</small
                        >
                      </div>
                    </div>
                  </div>
                  <div class="col-md-3 text-center">
                    <div
                      class="form-check form-switch d-flex justify-content-center"
                    >
                      <input
                        class="form-check-input medicine-checkbox"
                        type="checkbox"
                        id="med4"
                        style="transform: scale(1.5)"
                        onchange="markMedicine(this, 'Multivitamin')"
                        checked
                      />
                      <label
                        class="form-check-label ms-2"
                        for="med4"
                        style="color: #94a3b8"
                      >
                        Taken Today
                      </label>
                    </div>
                  </div>
                  <div class="col-md-3 text-end">
                    <div
                      id="timestamp4"
                      class="timestamp"
                      style="color: #10b981; font-size: 0.9rem"
                    >
                      Taken at 9:15 AM
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Progress Summary -->
      <div class="row mt-4">
        <div class="col-12">
          <div
            class="card"
            style="
              background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
              border: 1px solid rgba(59, 130, 246, 0.3);
              border-radius: 15px;
            "
          >
            <div class="card-body text-center p-4">
              <h4 style="color: #f8fafc; margin-bottom: 20px">
                Today's Progress
              </h4>
              <div class="row">
                <div class="col-md-4">
                  <div class="p-3">
                    <i
                      class="fas fa-check-circle mb-2"
                      style="font-size: 2.5rem; color: #10b981"
                    ></i>
                    <h3 style="color: #f8fafc; margin: 0" id="takenCount">2</h3>
                    <small style="color: #94a3b8">Medicines Taken</small>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="p-3">
                    <i
                      class="fas fa-clock mb-2"
                      style="font-size: 2.5rem; color: #f59e0b"
                    ></i>
                    <h3 style="color: #f8fafc; margin: 0" id="pendingCount">
                      2
                    </h3>
                    <small style="color: #94a3b8">Pending</small>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="p-3">
                    <i
                      class="fas fa-percentage mb-2"
                      style="font-size: 2.5rem; color: #3b82f6"
                    ></i>
                    <h3 style="color: #f8fafc; margin: 0" id="completionRate">
                      50%
                    </h3>
                    <small style="color: #94a3b8">Completion Rate</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script>
      // Set current date
      document.getElementById("currentDate").textContent =
        new Date().toLocaleDateString("en-US", {
          weekday: "long",
          year: "numeric",
          month: "long",
          day: "numeric",
        });

      // Function to mark medicine as taken
      function markMedicine(checkbox, medicineName) {
        const timestampId = checkbox.id.replace("med", "timestamp");
        const timestampElement = document.getElementById(timestampId);

        if (checkbox.checked) {
          const now = new Date();
          const timeString = now.toLocaleTimeString("en-US", {
            hour: "numeric",
            minute: "2-digit",
            hour12: true,
          });
          timestampElement.textContent = `Taken at ${timeString}`;
          timestampElement.style.color = "#10b981";

          // Show success message
          showNotification(`✅ ${medicineName} marked as taken!`, "success");
        } else {
          timestampElement.textContent = "Not taken yet";
          timestampElement.style.color = "#64748b";

          // Show info message
          showNotification(`ℹ️ ${medicineName} unmarked`, "info");
        }

        updateProgress();
      }

      // Function to update progress
      function updateProgress() {
        const checkboxes = document.querySelectorAll(".medicine-checkbox");
        const taken = Array.from(checkboxes).filter((cb) => cb.checked).length;
        const total = checkboxes.length;
        const pending = total - taken;
        const rate = Math.round((taken / total) * 100);

        document.getElementById("takenCount").textContent = taken;
        document.getElementById("pendingCount").textContent = pending;
        document.getElementById("completionRate").textContent = rate + "%";
      }

      // Function to show notifications
      function showNotification(message, type) {
        const notification = document.createElement("div");
        notification.className = `alert alert-${
          type === "success" ? "success" : "info"
        } position-fixed`;
        notification.style.cssText = `
                top: 20px; right: 20px; z-index: 1050; 
                background: ${type === "success" ? "#10b981" : "#3b82f6"}; 
                color: white; border: none; border-radius: 8px;
                box-shadow: 0 10px 25px rgba(0,0,0,0.3);
            `;
        notification.textContent = message;

        document.body.appendChild(notification);

        setTimeout(() => {
          notification.remove();
        }, 3000);
      }

      // Initialize progress on page load
      updateProgress();
    </script>

    <!-- Bootstrap JS Bundle CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
